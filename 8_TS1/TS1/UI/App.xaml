    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#F8727272" />
        <SolidColorBrush x:Key="DialogBorderBrush" Color="#FFFFFFFF" />
